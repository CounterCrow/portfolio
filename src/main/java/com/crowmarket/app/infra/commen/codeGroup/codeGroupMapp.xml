<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <!-- 전체 메퍼중에서 유일한 값을 사용하여야 한다. 해서 관계적으로 해당 파일의 패스와 파일 이름 (확장자제외)그리고 dao에서 namespace와 일치시켜야 한다. -->
<mapper namespace="com.crowmarket.app.infra.commen.codeGroup.codeGroupMapp">  
																									<!-- select결과를 받을 계체 -->
    <resultMap id="resultMapObj" type="com.crowmarket.app.infra.commen.codeGroup.codeGroup"></resultMap>
    <sql id="codeGroup">
    		codeGroupSeq
    		, delNY
    		, codeGroupKO
    		, codeGroupEN
    		, regDT
    		, modDT
    </sql>
    <sql id="shkey">
 					 <if test="keySeq != null and !keySeq.equals('')">
     						   AND codeGroupSeq = #{keySeq}
      				</if>
      				<if test="keyNameKO != null and !keyNameKO.equals('')">
        						AND codeGroupKO LIKE CONCAT('%',#{keyNameKO},'%')
      				</if>
      				<if test="keyNameEN != null and !keyNameEN.equals('')">
        						AND codeGroupEN LIKE CONCAT('%',#{keyNameEN},'%')
      				</if>
      				<if test="keyRegDT != null and !keyRegDT.equals('')">
        						AND regDT LIKE CONCAT('%',#{keyRegDT},'%')
      				</if>
 				 
 					 <!-- commenGroupName LIKE CONCAT('%',#{Keyword},'%') -->
 				
    </sql>
    
    
    <select id="selectList" resultMap="resultMapObj">
		    	SELECT 
	    			<include refid="codeGroup"></include>
	    		FROM
	    				codeGroup
 				WHERE 1=1
	 				AND
	 					delNY = 0	
    </select>
    <select id="shSelectList" resultMap="resultMapObj">		
    		SELECT 
    			<include refid="codeGroup"></include>
    		FROM
    				codeGroup
 			WHERE 1=1
			<include refid="shkey"></include>
 				AND
 					delNY = 0	
 			LIMIT #{rowNumToShow} OFFSET #{startRnumForMysql}		
    </select>
    
     <select id="selectOne" resultMap="resultMapObj">		
    		SELECT 
    			<include refid="codeGroup"></include>
    		FROM
    				codeGroup
 				WHERE 1=1
 					AND  codeGroupSeq = #{codeGroupSeq}
    </select>
    <select id="selectOneCount" resultType="Integer">
		SELECT 
			count(*)
		FROM 
			codeGroup
    	WHERE 1=1
		<include refid="shkey" />
	</select>
    <!-- ㅡㅡㅡㅡㅡㅡ 업데이트 ㅡㅡㅡㅡㅡㅡ -->
    <update id="update">		
    			UPDATE 
    				codeGroup
 				SET
 					codeGroupKO = #{codeGroupKO}
 					, codeGroupEN = #{codeGroupEN}
 					, modDT = now()
 				WHERE				
 					 codeGroupSeq = #{codeGroupSeq}
    </update>
    <!-- ㅡㅡㅡㅡㅡㅡ 삭제ㅡㅡㅡㅡㅡㅡㅡㅡ -->
    <delete id="delete">		
    			DELETE 
    			FROM 
    					codeGroup
 				WHERE				
	 					 codeGroupSeq = #{codeGroupSeq}
	 			 				 
    </delete>
    <!-- ㅡㅡㅡㅡㅡㅡ 저장 ㅡㅡㅡㅡㅡㅡ -->
    <insert id="save">
    			INSERT
    			INTO 	codeGroup (
    				 codeGroupKO 
    				, codeGroupEN
    				, regDT
    				, delNY
    			) VALUES (
    					#{codeGroupKO}, #{codeGroupEN},now() ,0)
    </insert>
    <!-- ㅡㅡㅡㅡㅡㅡ 율리트 ㅡㅡㅡㅡㅡㅡ -->
     <update id="updele">		
    			UPDATE codeGroup
 				SET
 					delNY = "1"
 					, remDT = now()
 				WHERE				
 					 codeGroupSeq = #{codeGroupSeq}
    </update>
    <!-- 캐시관련 -->
    <select id="selectlistCashedCodeGroupArrayList" resultMap="resultMapObj">
    			SELECT
    				codeGroupSeq
    				, codeGroupKO 
    				, codeGroupEN
    			FROM
    				codeGroup
    			WHERE 1=1
    				AND	delNY = 0		
    </select>
    
    </mapper>